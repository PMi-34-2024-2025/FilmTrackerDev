<UserControl x:Class="FilmTrackerDev2.UILayer.PlanerBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmTrackerDev2.UILayer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="auto" Height="100" Margin="10">
        <Button x:Name="MainButton" Background="LightBlue" Content="Film" FontSize="50" VerticalContentAlignment="Center">

        </Button>
        <Grid x:Name="SubGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="FavoriteButton" Grid.Column="0" Margin="13" Click="FavoriteButtonCLick">
                
            </Button>
            <Button x:Name="ContextMenuButton" Grid.Column="2" Margin="13">
                
            </Button>
        </Grid>
    </Grid>
</UserControl>
