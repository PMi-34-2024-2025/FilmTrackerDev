<UserControl x:Class="FilmTrackerDev2.UILayer.FilmButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmTrackerDev2.UILayer"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="130">
    <Grid Width="130" Height="150">
        <Button x:Name="MainButton" Click="MainButton_Click" Background="LightBlue">
            <Grid>
                <StackPanel x:Name="FilmNamePanel" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Main Text" HorizontalAlignment="Center" />
                    <TextBlock Text="Sub Text" HorizontalAlignment="Center" FontSize="10" />
                </StackPanel>
            </Grid>
        </Button>
        <Button x:Name="SubButton" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Orange" Click="SubButton_Click">
            <Button.RenderTransform>
                <TranslateTransform X="10" Y="-10"/>
            </Button.RenderTransform>
        </Button>
    </Grid>
</UserControl>
